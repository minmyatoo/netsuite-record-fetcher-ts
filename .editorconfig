# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# TypeScript files
[*.{ts,tsx}]

# Indentation
indent_style = space
indent_size = 2
tab_width = 2

# Trailing whitespace
trim_trailing_whitespace = true

# Insert final newline
insert_final_newline = true

# Encoding
charset = utf-8

# Max line length
max_line_length = 120

# Airbnb style guide
# https://github.com/airbnb/javascript
# https://github.com/iamturns/eslint-config-airbnb-typescript
[*.ts]
# Indentation
indent_style = space
indent_size = 2

# Trailing commas
comma_style = all
